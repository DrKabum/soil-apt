generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     String   @id @unique
  name   String
  avatar String
  Prompt Prompt[]
}

model Prompt {
  id          String   @id @default(uuid())
  author      User     @relation(fields: [userId], references: [id])
  userId      String
  input       String
  isResponse  Boolean
  responseTo  String?
  output      String
  inputToken  Int
  outputToken Int
  createdAt   DateTime
}
